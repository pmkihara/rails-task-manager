<div class="container">
  <h1 class="mb-5">My tasks</h1>
  <div class="list">
    <ul>
      <% @tasks.each do |task| %>
      <li><% if task.completed %>
              <i class="far fa-check-square"></i>
          <% else %><i class="far fa-square"></i>
          <% end %>
        <%= link_to task.title, task_path(task.id) %> -
        <%= link_to task_path(task), method: :delete, data: { confirm: "Delete #{task.title}?"}  do %>
          <%= content_tag :i, "", :class => "far fa-trash-alt" %>
        <% end %>
      </li>
      <% end %>
    </ul>
  </div>
  <hr>
  <%= link_to "Add a new task", new_task_path %>
</div>
